<LoginScreen>:
    
    MDCard:
        orientation: "vertical"
        id: login_card
        padding: 50
        spacing: "50dp"
        size_hint: None, None
        size: "600dp", "500dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        
        
        MDBoxLayout:
            orientation: "vertical"
            
            Image:
                halign: "center"
                source: "res/password_icon.png"
                allow_stretch: True
                size: 200, 200
                spacing: "50dp"
            
            MDLabel:
                text: "Iniciar sesión"
                font_size: 24
                halign: "center"
                text_color: 0,0,0,1

            MDTextField:
                id: user_login
                hint_text: "Usuario"
                icon_right: "account"
                font_size: 17
                write_tab: False
                multiline: False
                on_text_validate: pass_login.focus = True
                max_text_length: 25
                
                
            MDTextField:
                id: pass_login
                hint_text: "Contraseña"
                icon_right: "key-variant"
                font_size: 17
                multiline: False
                password: True
                write_tab: False
                on_text_validate: root.login(user_login.text, pass_login.text)
                max_text_length: 25

            MDBoxLayout:
                orientation: 'horizontal'
                #halign: "center"
                spacing: "100dp"


                MDRaisedButton:
                    halign: "left"
                    text: "Login"
                    #            RR  GG  BB  AL
                    md_bg_color: 0.8,0.6,0.0,1
                    text_color:  1.0,1.0,1.0,1
                    on_press: root.login(user_login.text, pass_login.text)

                MDRaisedButton:
                    halign: "center"
                    text: "Registrar"
                    #            RR  GG  BB  AL
                    md_bg_color: 0.8,0.8,0.8,1
                    text_color:  0.3,0.3,0.3,1
                    on_press: root.signup(user_login.text, pass_login.text)

                MDRaisedButton:
                    halign: "center"
                    text: "Información software"
                    font_size: 12
                    #            RR  GG  BB  AL
                    md_bg_color: 0.99,0.99,0.99,0.99
                    text_color:  0.7,0.7,0.7,1
                    on_press: root.show_alert_dialog()

                
                